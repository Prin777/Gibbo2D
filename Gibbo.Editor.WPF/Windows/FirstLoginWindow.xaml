<Window x:Class="Gibbo.Editor.WPF.FirstLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome To Gibbo" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Closing="Window_Closing" ResizeMode="NoResize" Icon="/Gibbo.Editor.WPF;component/Gibbo.Content/logo_modern.png" SizeToContent="WidthAndHeight">
    <Grid Background="{DynamicResource BackgroundBrush}" Height="216" Width="401">
        <Label Content="Your Email:" FontSize="14" Foreground="{DynamicResource ForegroundGray}" HorizontalAlignment="Left" Margin="7,108,0,0" VerticalAlignment="Top" />
        <TextBox FontSize="14" Foreground="{DynamicResource ForegroundGray}" Height="24" HorizontalAlignment="Left" Margin="12,137,0,0" Name="emailTxtBox" Template="{DynamicResource TextBoxBaseControlTemplate}" Text="" TextWrapping="NoWrap" VerticalAlignment="Top" Width="379" />
        <Label Content="Welcome to Gibbo 2D!" FontSize="14" Foreground="{DynamicResource ForegroundGray}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="26" Width="404" FontWeight="SemiBold" />
        <TextBlock  TextWrapping="WrapWithOverflow" Text="In order to use this editor you need to insert your email (you won't get unwanted emails). Thanks for the cooperation." FontSize="14" Foreground="{DynamicResource ForegroundGray}" Height="60" HorizontalAlignment="Left" Margin="22,36,0,0" VerticalAlignment="Top" Width="369" ClipToBounds="True" />
        <Button x:Name="continueBtn" Content="Continue" HorizontalAlignment="Left" Margin="302,178,0,0" VerticalAlignment="Top" Width="89" Style="{DynamicResource ButtonStyle}" Click="continueBtn_Click" />
    </Grid>
</Window>
