<UserControl x:Class="Gibbo.Editor.WPF.VisualNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             MinHeight="80" MinWidth="180">

    <Border Style="{DynamicResource ResourceKey=NodeBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Style="{DynamicResource ResourceKey=NodeTitleBorder}" Cursor="Hand">
                <TextBlock Style="{DynamicResource ResourceKey=NodeTitleTextBlock}" Text="I'm a node"></TextBlock>
            </Border>
            <Border Grid.Row="1" Style="{DynamicResource ResourceKey=NodeContentBorder}">

            </Border>
        </Grid>
    </Border>
</UserControl>
